<link rel="stylesheet" href="/css/estilos2.css">

<h1>Página de Inicio</h1>
<body>
<div id="menu">
    <ul>
        <li>
            <a href="/marca/vista/inicio">Inicio</a>
        </li>
        <li>
            <a href="/marca/vista/crear">Crear marca</a>
        </li>
        <li>
            <a href="/marca/vista/logout">Cerrar Sesión</a>
        </li>
    </ul>
</div>

<form action="/marca/vista/inicio" method="GET">
    <div class="form-group row">
        <label for="busqueda" class="col-sm-1 col-form-label">Busqueda:</label>
        <div class="col-sm-10">
            <input id="busqueda" type="text" name="busqueda" class="form-control" value="<%=parametrosConsulta.busqueda%>">
        </div>
        <div class="col-sm-1">
            <button type="submit" class="btn btn-primary"> Buscar</button>
        </div>

    </div>
</form>

<table>
    <!--table row-->
    <tr>
        <!--table header-->
        <th>Nombre de la marca</th>
        <th>Color de la marca</th>
        <th>Años de la marca</th>
        <th>Origen de la marca</th>
        <th>Empresa que tiene la marca</th>
        <th>Acciones</th>
    </tr>
    <% arregloMarcas.forEach( (objeto)=>{ %>
        <tr>
            <td><%= objeto.nombre %></td>
            <td><%= objeto.color%></td>
            <td><%= objeto.anios%></td>
            <td><%= objeto.origen%></td>
            <td><%= objeto.empresa%></td>

            <td>
                <a href="/marca/vista/editar/<%= objeto.id %>">
                    <button>Editar</button>
                </a>
                <form action="/marca/eliminarDesdeVista/<%= objeto.id %>"
                      method="POST">
                    <button type="submit">Eliminar</button>
                </form>
            </td>
        </tr>
    <% } ) %>

</table>
</body>